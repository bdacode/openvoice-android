<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/outbound_row_layout"
  android:layout_width="fill_parent" 
  android:layout_height="?android:attr/listPreferredItemHeight"
  android:padding="1dip" > 
  
  <TextView android:id="@+id/outbound_caller_name"
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent"
    android:layout_alignParentLeft="true"
    android:textStyle="bold"
    android:textSize="14sp" />
		
	<TextView android:id="@+id/outbound_caller_id"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@id/outbound_caller_name" 
		android:textSize="12sp" />

	<TextView android:id="@+id/outbound_datetime"
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content"
		android:layout_toRightOf="@id/outbound_caller_id"
		android:layout_alignParentRight="true" 
    android:layout_alignBaseline="@id/outbound_caller_id"
    android:gravity="right"
    android:paddingRight="5dip"    
		android:textSize="12sp" />

</RelativeLayout> 
